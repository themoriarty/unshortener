{
    "manifest_version": 2,

    "name": "URL Unshortener",
    "description": "This extension unshortens t.co, bit.ly and other URL shortened links",
    "version": "0.1.1",

    "icons": {
	"48": "icon48.png",
	"128": "icon128.png"
    },

    "background":{
	"scripts": ["common.js", "background.js"],
	"persistent": true
    },
    "content_scripts": [
	{
    	    "matches": ["<all_urls>"],
	    "js": ["common.js", "main.js"],
	    "all_frames": true,
	    "run_at": "document_end"
	    
	}
    ],

    "permissions": [
	"<all_urls>", "webRequest", "webRequestBlocking"
    ],
    "browser_action": {

    }
}